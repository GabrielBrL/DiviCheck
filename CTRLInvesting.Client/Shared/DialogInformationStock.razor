            <MudTabPanel Icon="@Icons.Material.Filled.Info" Text="Detalhes" >
                <DetalhesAcao stock="stock" />
            </MudTabPanel>
            <MudTabPanel Icon="@Icons.Material.Filled.TrendingUp" Text="GrÃ¡fico">
